{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Jogo list</h1>
    <p>Inicio: {{ timer.inicio }} </p>
    <p>{{ knp_pagination_render(entities) }}</p>
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Datainclusao</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('jogo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numero }}</td>
                <td>{% if entity.dataInclusao %}{{ entity.dataInclusao|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('jogo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('jogo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('jogo_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>

    <p>Fim: {{ timer.fim }}</p>

    {% endblock %}
