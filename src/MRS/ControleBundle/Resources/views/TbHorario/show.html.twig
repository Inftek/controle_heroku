{% extends '::base.html.twig' %}

{% block body -%}

    {% for notice in app.session.flashBag.get('notice') %}
        <div class="alert alert-info">
            {{ notice }}
        </div>
    {% endfor  %}

    <h1>TbHorario</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Hordiasemana</th>
                <td>{{ entity.horDiaSemana }}</td>
            </tr>
            <tr>
                <th>Hordata</th>
                <td>{{ entity.horData|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Horentrada</th>
                <td>{{ entity.horEntrada | date('H:i:s') }}</td>
            </tr>
            <tr>
                <th>Horalmocoida</th>
                <td>{{ entity.horAlmocoIda | date('H:i:s')}}</td>
            </tr>
            <tr>
                <th>Horalmocovolta</th>
                <td>{{ entity.horAlmocoVolta | date('H:i:s') }}</td>
            </tr>
            <tr>
                <th>Horsaida</th>
                <td>{{ entity.horSaida | date('H:i:s') }}</td>
            </tr>
            <tr>
                <th>Horjustificativa</th>
                <td>{{ entity.horJustificativa }}</td>
            </tr>
            <tr>
                <th>Horcodigo</th>
                <td>{{ entity.horCodigo }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('horario') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('horario_edit', { 'id': entity.horCodigo }) }}">
            Edit
        </a>
    </li>
     <li>
         <a href="{{ path('pdf_horario',{'id': entity.horCodigo }) }}" class="btn btn-primary">
             <span class="glyphicon glyphicon-save"></span>
             Exportar PDF
         </a>
     </li>

    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
